<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WeatherApp_CW.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WeatherApp_CW"
    xmlns:features="clr-namespace:WeatherApp_CW.Features"
    Shell.FlyoutBehavior="Flyout"
    Title="WeatherApp_CW">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Sign In"
        ContentTemplate="{DataTemplate features:SignInView}"
        Route="SignIn" />

    <ShellContent
        Title="Sign Up"
        ContentTemplate="{DataTemplate features:SignUpView}"
        Route="SignUp" />

</Shell>
