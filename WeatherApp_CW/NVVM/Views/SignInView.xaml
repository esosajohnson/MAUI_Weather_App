<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp_CW.NVVM.Views.SignInView"
             Title="Sign In">

    <ContentPage.Content>
        <Grid 
            BackgroundColor="White" 
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand"
            RowDefinitions="Auto,*">
            <StackLayout Grid.Row="0" HorizontalOptions="Center">
                <Image 
                    Margin="0,30"
                    Aspect="AspectFit"
                    HeightRequest="150"
                    Source="weather_logo.png"
                    WidthRequest="200" />
            </StackLayout>

            <Border
                Grid.Row="1"
                BackgroundColor="White"
                HeightRequest="600"
                Stroke="White">
                <Grid
                    Padding="20,50,20,0"
                    HorizontalOptions="FillAndExpand"
                    RowSpacing="20"
                    VerticalOptions="FillAndExpand"
                    RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto">
                    <Label
                        Grid.Row="0"
                        FontAttributes="Bold"
                        FontSize="30"
                        HorizontalOptions="CenterAndExpand"
                        Text="Esosa's Weather App!"
                        TextColor="MidnightBlue" />
                    <Label
                        Grid.Row="1"
                        Margin="0,-15,0,0"
                        HorizontalOptions="CenterAndExpand"
                        Text="Sign In or Register for accurate weather forecasts"
                        TextColor="MidnightBlue" />
                    <Entry
                        Grid.Row="2"
                        Margin="0,15,0,0"
                        HorizontalOptions="FillAndExpand"
                        Placeholder="Email"
                        Text="{Binding UserEmail}"
                        VerticalOptions="FillAndExpand" />
                    <Entry
                        Grid.Row="3"
                        HorizontalOptions="FillAndExpand"
                        IsPassword="True"
                        Placeholder="Password"
                        Text="{Binding UserPassword}"
                        VerticalOptions="FillAndExpand" />

                    <Button
                        Margin="0,15,0,0"
                        Grid.Row="4"
                        Command="{Binding SignInButton}"
                        CornerRadius="15"
                        Text="Log In"
                        FontAttributes="Bold"
                        FontSize="18"
                        IsEnabled="{Binding CanSignIn}"
                        HeightRequest="60">
                        <Button.Triggers>
                            <DataTrigger TargetType="Button" Binding="{Binding CanSignIn}" Value="False">
                                <Setter Property="BackgroundColor" Value="Gray"/>
                            </DataTrigger>
                            <DataTrigger TargetType="Button" Binding="{Binding CanSignIn}" Value="True">
                                <Setter Property="BackgroundColor" Value="#1C375C"/>
                            </DataTrigger>
                        </Button.Triggers>
                    </Button>

                    <Button
                        Grid.Row="5"
                        BackgroundColor="#1C375C"
                        Command="{Binding RegisterButton}"
                        CornerRadius="15"
                        HeightRequest="60"
                        FontFamily="Aptos"
                        FontAttributes="Bold"
                        FontSize="18"
                        Text="Register" />
                    
                </Grid>
            </Border>
        </Grid>
    </ContentPage.Content>
    
</ContentPage>