<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp_CW.NVVM.Views.SignUpView"
             Title="Sign Up">

    <ContentPage.Content>
        <Grid 
            BackgroundColor="White" 
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand"
            RowDefinitions="Auto,*">
            <StackLayout Grid.Row="0" HorizontalOptions="Center">
                <Image 
                    Margin="0,30"
                    Aspect="AspectFit"
                    HeightRequest="150"
                    Source="weather_logo.png"
                    WidthRequest="200" />
            </StackLayout>

            <Border
                Grid.Row="1"
                BackgroundColor="White"
                HeightRequest="600"
                Stroke="White">
                <Grid
                    Padding="20,50,20,0"
                    HorizontalOptions="FillAndExpand"
                    RowSpacing="20"
                    VerticalOptions="FillAndExpand"
                    BackgroundColor="White"
                    RowDefinitions="Auto, Auto, Auto, Auto, Auto">
                    <Label
                        Grid.Row="0"
                        FontAttributes="Bold"
                        FontSize="24"
                        HorizontalOptions="CenterAndExpand"
                        Text="Registration"
                        TextColor="MidnightBlue" />
                    <Label
                        Grid.Row="1"
                        Margin="0,-15,0,0"
                        HorizontalOptions="CenterAndExpand"
                        Text="Sign Up with your Email"
                        TextColor="MidnightBlue" />
                    <Entry
                        Grid.Row="2"
                        Margin="0,20,0,0"
                        HorizontalOptions="FillAndExpand"
                        Placeholder="Email"
                        Text="{Binding Email}"
                        VerticalOptions="FillAndExpand" />
                    <Entry
                        Grid.Row="3"
                        HorizontalOptions="FillAndExpand"
                        IsPassword="True"
                        Placeholder="Password"
                        Text="{Binding Password}"
                        VerticalOptions="FillAndExpand" />
                    <Button
                        Margin="0,25,0,0"
                        Grid.Row="4"
                        Command="{Binding RegisterUserButton}"
                        CornerRadius="15"
                        Text="Sign Up"
                        FontAttributes="Bold"
                        IsEnabled="{Binding CanRegister}"
                        HeightRequest="60">
                        <Button.Triggers>
                            <DataTrigger TargetType="Button" Binding="{Binding CanRegister}" Value="False">
                                <Setter Property="BackgroundColor" Value="Gray"/>
                            </DataTrigger>
                            <DataTrigger TargetType="Button" Binding="{Binding CanRegister}" Value="True">
                                <Setter Property="BackgroundColor" Value="#1C375C"/>
                            </DataTrigger>
                        </Button.Triggers>
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </ContentPage.Content>

</ContentPage>